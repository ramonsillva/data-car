<div class="card border-0 shadow-sm mb-3 @(IsDragging ? "border-primary dragging" : "")"
     draggable="true"
     @ondragstart="HandleDragStartInternal"
     style="cursor: grab; transition: all 0.2s ease;">

    <div class="card-body p-3">
        <h6 class="card-title fw-bold mb-3">@Title</h6>
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnDragStart { get; set; }

    private bool IsDragging { get; set; } = false;

    private async Task HandleDragStartInternal(DragEventArgs e)
    {
        IsDragging = true;

        if (OnDragStart.HasDelegate)
        {
            await OnDragStart.InvokeAsync();
        }
    }
}